extends layout

block content
    .container-fluid
        .row
            .col-lg.text-center
                a(href="/" class="btn btn-active btn-lg") Home
    if users.length
        .table-responsive
            table(class="table table-hover")
                tr
                    th Name
                    th cgpa
                    th course
                    th email
                    th password
                    th Action
                each user in users
                    tr
                        td= user.name
                        td= user.cgpa
                        td= user.course
                        td= user.email
                        td= user.password
                        td
                            a(href='/user/'+ user.id)
                                i(class="fa fa-pencil fa-lg" style="color:lime" aria-hidden='true') -
                            a(href='/user/delete/'+ user.id onclick="return confirm('Are you sure you want to proceed ?');")
                                i(class="fa fa-trash fa-lg" style="color:red" aria-hidden='true')
                            
                                        
    else
        p No Users found :(