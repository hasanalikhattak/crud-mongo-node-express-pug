extends layout

block content
    div.text-center
        form(class="form-signin", action = "/user", method = "POST") 
            //- #error
            //-     if error
            //-         p.text-danger Error!!!
            - var h1Classes = ['h3', 'mb-3', 'font-weight-normal']
            h1(class=h1Classes) Enter User Details to be Add
            div 
                label(for = "name") Name: 
                input(name = "name" class="form-control") 
                br 
            div 
                label(for = "cgpa") CGPA: 
                input(name = "cgpa" class="form-control") 
                br 
            div 
                label(for = "course") Course: 
                input(name = "course" class="form-control")
                br
            div 
                label(for = "email") Email: 
                input(name = "email" type = "email" class="form-control")
                br
            div 
                label(for = "password") Password 
                input(name = "password" type = "password" class="form-control")
                br
            - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block', 'btn-success'];
            button(class=buttonClass type = "submit") Create new person
            button(class="btn btn-block btn-lg btn-warning" type = "reset") Reset Form